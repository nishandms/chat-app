<div class="login-div">
    <div class="col-md-4 login-card">
        <div class="card card-body login-card-child">
            <form action="/rest/add-user" method="post">
            <div class="col-md-12">
                <input class="form-control text-input" id="name" name="name" type="text" placeholder="Name" >
            </div>
            <div class="col-md-12 mt-3">
                <input class="form-control text-input" type="text" name="username" id="username" placeholder="Email Address or Phone number" >
            </div>
            <div class="col-md-12 mt-3">
                <input class="form-control text-input" type="password" name="password" id="password" placeholder="Password" >
            </div>
            <div class="col-md-12 mt-3 ">
                <button class="btn btn-primary float-end" id="sign-up">Sign Up</button>
            </div>
            </form>
        </div>
    </div>
</div>
