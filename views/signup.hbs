<div class="login-div">
    <div class="col-md-4 login-card">
        <div class="card card-body login-card-child">
            <div class="col-md-12">
                <input class="form-control text-input" id="name" type="text" placeholder="Name" >
            </div>
            <div class="col-md-12 mt-3">
                <input class="form-control text-input" type="text" id="username" placeholder="Email Address or Phone number" >
            </div>
            <div class="col-md-12 mt-3">
                <input class="form-control text-input" type="password" id="password" placeholder="Password" >
            </div>
            <div class="col-md-12 mt-3 ">
                <button class="btn btn-primary float-end" id="sign-up">Sign Up</button>
            </div>
        </div>
    </div>
</div>
<script>
    $("#sign-up").click(()=>{
        let param = {
            name: $("#name").val(),
            username: $("#username").val(),
            password: $("#password").val(),
        }

        $.ajax({
            url:"/rest/add-user",
            type:"POST",
            data:param
        }).done(data =>{
            console.log(data)
        })
        console.log(param)
    })
</script>